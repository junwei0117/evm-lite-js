{
	"name": "evm-lite-datadir",
	"namespace": "mosaicnetworks",
	"version": "1.0.0-alpha.1",
	"license": "MIT",
	"main": "./dist/index.js",
	"typings": "./dist/typings/index.d.ts",
	"scripts": {
		"dev": "npm install && npm link evm-lite-core && npm link evm-lite-keystore && npm run build && npm link",
		"clean": "rm -rf ./node_modules/ && rm -rf dist/ && rm -rf package-lock.json && rm -rf tsconfig.tsbuildinfo",
		"clean-yarn": "rm -rf ./node_modules/ && rm -rf yarn.lock && rm -rf dist/",
		"code": "ts-node tests/code.ts",
		"test:watch": "jest --watchAll",
		"test": "jest",
		"compile": "tsc -p ./tsconfig.json",
		"prepublish": "tsc -p ./tsconfig.json"
	},
	"dependencies": {
		"evm-lite-core": "file:../core",
		"evm-lite-keystore": "file:../keystore",
		"mkdirp": "^0.5.1",
		"toml": "^3.0.0",
		"tomlify-j0.4": "^3.0.0"
	},
	"resolutions": {
		"terser": "3.14.1"
	},
	"jest": {
		"testEnvironment": "node",
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	}
}
